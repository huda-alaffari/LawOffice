@page "/team"

<div class="container my-5" dir="rtl" style="font-family: 'Cairo', sans-serif;">
    <div class="p-5 rounded-4 shadow"
         style="background-color:#f5f0e8; border:1px solid #d9c7aa; max-width: 900px; margin:auto;">

        <!-- العنوان الرئيسي -->
        <h2 class="text-center mb-4" style="color:#4b2e0f; font-weight:700;">
            العاملون في المكتب
        </h2>

        <!-- النص التعريفي -->
        <p class="text-center mb-5" style="color:#2f1d0c; font-size:1.05rem;">
            فريقنا المحترف لضمان تقديم أفضل الخدمات القانونية لموكلينا.
        </p>

        <!-- قائمة الموظفين -->
        <div class="row g-4">
            @foreach (var member in teamMembers)
            {
                <div class="col-md-6">
                    <div class="p-3 border rounded-3 h-100"
                         style="background-color:#fffaf3; border-color:#d8b98b;">
                        <h6 class="fw-bold mb-1" style="color:#4b2e0f;">@member.Name</h6>
                        <p class="mb-0" style="color:#3b2b1a;">@member.Position (@member.Nationality)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

